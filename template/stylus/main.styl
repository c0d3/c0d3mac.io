@import 'nib'
@import 'fez'

global-reset()

fez-reset()

body
  font 13px/1.4 "helvetica neue", helvetica, arial, sans-serif
a
  color #cc3300
  text-decoration none

header, section#content, footer
  width 740px
  margin-left 220px

header
  margin-top 50px

section#content
  margin-top 50px
  margin-bottom 50px
  min-height 350px

nav
  position fixed
  top 65px
  left 50px
  width 120px
  
  ul
    list-style none
    li
      margin-left 0px
      a
        &:hover
          text-decoration underline

footer
  margin-top 50px
  margin-bottom 50px
  
  .branding
    a.branding
      button-shiny(#cc3300, #fff)